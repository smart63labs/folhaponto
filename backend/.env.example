# Configurações do Servidor
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=sua_chave_secreta_super_segura_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# Sistema Configuration
SISTEMA_NOME=Sistema de Controle de Ponto - SEFAZ-TO
SISTEMA_VERSAO=2.0.0

# Timezone
TIMEZONE=America/Araguaina

# Session Configuration
SESSION_SECRET=sua_chave_de_sessao_super_segura
SESSION_TIMEOUT=3600000

# Email Configuration (para futuras implementações)
SMTP_HOST=smtp.sefaz.to.gov.br
SMTP_PORT=587
SMTP_USER=sistema.ponto@sefaz.to.gov.br
SMTP_PASS=senha_do_email

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Oracle Database Configuration
DB_USER=folhaponto_user
DB_PASSWORD=sua_senha_do_banco
DB_HOST=localhost
DB_PORT=1521
DB_SERVICE_NAME=FOLHAPONTO_PDB
DB_CONNECTION_STRING=localhost:1521/FOLHAPONTO_PDB